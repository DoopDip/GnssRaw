<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_list"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_list_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/satellite"
        android:src="@drawable/logo_unknow"
        android:transitionName="list_logoTransition" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_list_svId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/thaisansneue_extrabold"
            android:text="@string/sv_id"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            android:transitionName="list_SvidTransition" />

        <TextView
            android:id="@+id/adapter_list_satelliteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/thaisansneue_light"
            android:text="@string/satellite"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:transitionName="list_SatelliteNameTransition" />
    </LinearLayout>
</LinearLayout>