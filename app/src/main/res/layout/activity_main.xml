<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="th.ac.kmutnb.cs.gnssraw.MainActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:paddingEnd="0dp"
        android:paddingStart="15dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:contentDescription="@string/position"
                android:src="@drawable/btn_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/thaisansneue_semibold"
                android:text="@string/position"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:contentDescription="@string/list"
                android:src="@drawable/btn_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/thaisansneue_semibold"
                android:text="@string/list"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:contentDescription="@string/record"
                android:src="@drawable/btn_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/thaisansneue_semibold"
                android:text="@string/record"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/main_menu"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/earth_night"
        android:src="@drawable/earth_night" />
</RelativeLayout>
